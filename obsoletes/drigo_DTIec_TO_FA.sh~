#for DIREC in WU_84888 WU_84885 WU_84588 WU_82397 WU_72152 WU_64614 WU_64541 WU_64535 WU_64501 WU_64493 WU_64468 WU_64459 WU_64450 WU_64432 WU_64430 WU_64427 WU_64403 WU_64400 WU_64387 WU_64386 WU_64372 WU_64363 WU_64345 WU_64341 WU_64331 WU_64322 WU_64312 WU_64302 WU_64291 WU_63962 WU_63917 WU_63845 WU_63686 WU_62402 WU_62238 WU_62175 WU_62057 WU_61978 WU_22769 WU_12809 WU_12031 WU_10018_T1_MPRAGE

